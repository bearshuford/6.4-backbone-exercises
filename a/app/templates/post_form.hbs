<div class="form-group">
  <label class="sr-only" for="post-title">Title</label>
  <input type="text" class="form-control" id="post-title" placeholder="Title" required="true" data-error="Your post needs a title.">
  <div class="help-block with-errors"></div>
</div>

<div class="form-group">
  <label class="sr-only" for="post-body">Body</label>
  <textarea id="post-body" class="form-control vresize" rows="3" placeholder="body" required="true" data-warning="Your post needs a body."></textarea>
  <div class="help-block with-errors"></div>
</div>

<button type="submit" class="btn btn-default">Submit</button>
